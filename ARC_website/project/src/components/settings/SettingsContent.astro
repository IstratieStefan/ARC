<script>
  // Handle color picker updates
  function setupColorPicker(id, rgbId) {
    const picker = document.getElementById(id);
    const rgbDisplay = document.getElementById(rgbId);
    
    if (picker && rgbDisplay) {
      // Initial setup
      updateRgbDisplay(picker.value, rgbDisplay);
      
      // Event listener for changes
      picker.addEventListener('input', () => {
        updateRgbDisplay(picker.value, rgbDisplay);
      });
    }
  }
  
  function updateRgbDisplay(hexColor, display) {
    const r = parseInt(hexColor.slice(1, 3), 16);
    const g = parseInt(hexColor.slice(3, 5), 16);
    const b = parseInt(hexColor.slice(5, 7), 16);
    
    display.textContent = `[${r}, ${g}, ${b}]`;
  }
  
  // Setup all color pickers
  setupColorPicker('accent-color-picker', 'accent-color-rgb');
  setupColorPicker('primary-color', 'primary-color-rgb');
  setupColorPicker('secondary-color', 'secondary-color-rgb');
  setupColorPicker('success-color', 'success-color-rgb');
  setupColorPicker('warning-color', 'warning-color-rgb');
  setupColorPicker('danger-color', 'danger-color-rgb');
  
  // Handle RGB input updates for accent color
  const accentR = document.getElementById('accent-r');
  const accentG = document.getElementById('accent-g');
  const accentB = document.getElementById('accent-b');
  const accentPicker = document.getElementById('accent-color-picker');
  const accentRgbDisplay = document.getElementById('accent-color-rgb');
  
  function updateFromRgbInputs() {
    if (accentR && accentG && accentB && accentPicker && accentRgbDisplay) {
      const r = parseInt(accentR.value) || 0;
      const g = parseInt(accentG.value) || 0;
      const b = parseInt(accentB.value) || 0;
      
      const hexColor = `#${r.toString(16).padStart(2, '0')}${g.toString(16).padStart(2, '0')}${b.toString(16).padStart(2, '0')}`;
      accentPicker.value = hexColor;
      accentRgbDisplay.textContent = `[${r}, ${g}, ${b}]`;
    }
  }
  
  if (accentR && accentG && accentB) {
    accentR.addEventListener('input', updateFromRgbInputs);
    accentG.addEventListener('input', updateFromRgbInputs);
    accentB.addEventListener('input', updateFromRgbInputs);
  }
  
  // Update RGB inputs when color picker changes
  if (accentPicker && accentR && accentG && accentB) {
    accentPicker.addEventListener('input', () => {
      const hexColor = accentPicker.value;
      accentR.value = parseInt(hexColor.slice(1, 3), 16);
      accentG.value = parseInt(hexColor.slice(3, 5), 16);
      accentB.value = parseInt(hexColor.slice(5, 7), 16);
    });
  }
</script>