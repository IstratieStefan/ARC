---
interface Props {
  title: string;
  icon: string;
  value: string;
  subValue?: string;
  color?: string;
  class?: string;
}

const { title, icon, value, subValue, color = 'accent', class: className = '' } = Astro.props;
---

<div class={`bg-arc-card rounded-2xl shadow-sm border border-gray-100 overflow-hidden transition-all duration-300 hover:shadow-md ${className}`}>
  <div class="p-6">
    <div class="flex items-start justify-between mb-4">
      <h3 class="text-lg font-medium text-arc-text">{title}</h3>
      <div class={`text-${color}`} set:html={icon}></div>
    </div>
    
    <div class="mt-4">
      <slot />
      
      <div class="mt-2">
        <div class="text-2xl font-semibold">{value}</div>
        {subValue && <div class="text-sm text-arc-text-light mt-1">{subValue}</div>}
      </div>
    </div>
  </div>
</div>