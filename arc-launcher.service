[Unit]
Description=ARC Launcher
After=graphical.target

[Service]
Type=simple
User=admin
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/admin/.Xauthority
WorkingDirectory=/home/admin/ARC
ExecStart=/home/admin/ARC/venv/bin/python /home/admin/ARC/launcher.py
Restart=on-failure
RestartSec=5

[Install]
WantedBy=graphical.target

